@model ProductlistViewModel

<div class="text-center">
    <div class="display-6 my-3"> Products </div>
    <div class="d-flex justify-content-end">
        <a class="btn btn-outline-success" asp-action="Create">
            Create <i class="fa fa-plus"></i></a>
    </div>
    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("CategoriesMenu")
            @await Component.InvokeAsync("ProductFilterMenu")
            <div products="" number="3"></div>
        </div>
        <div class="col-md-9">
            <table class="table table-striped table-over ">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Product Name</th>
                        <th>Showcase</th>
                        <th>Price</th>
                        <th>Summary</th>
                        <th>Operations</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (Product prd in Model.Products)
                    {
                        <tr>
                            <td>@prd.Id</td>
                            <td>
                                <img class="border border-light " src="@prd?.ImageUrl" alt="@prd?.ProductName" width="50" />
                            </td>
                            <td>@prd.ProductName</td>
                            <td>
                                <div class="form-check form-switch">
                                    <input type="checkbox" class="form-check-input" checked="@prd.ShowCase" disabled>
                                </div>
                            </td>
                            <td>@prd.Price.ToString("c")</td>
                            <td>@prd.Summary</td>
                            <td>
                                <div class="btn-group">
                                    <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-warning"
                                        asp-action="Update" asp-route-id="@prd.Id">
                                        <i class="fa fa-edit"> </i>
                                    </a>

                                    <a data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-danger"
                                        asp-controller="Product" asp-action="Delete" asp-route-id="@prd.Id"><i
                                            class="fa fa-trash">
                                        </i>

                                    </a>

                                    <a data-toggle="tooltip" data-placement="top" title="Search" class="btn btn-info"
                                        target="_blank" asp-area="" asp-controller="Product" asp-action="Get"
                                        asp-route-id="@prd.Id">
                                        <i class="fa fa-search"> </i></a>

                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
                    <div>
            <div page-model="@Model?.Pagination" page-action="Index" page-classes-enabled="true" page-class="btn"
                page-class-normal="btn-outline-warning" page-class-selected="btn-primary" class="btn-group"></div>
        </div>
        </div>
    </div>



</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(() => {
            $('[data-toggle="tooltip"]').tooltip()
        });    
    </script>
}