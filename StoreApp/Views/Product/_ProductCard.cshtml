@model Product


<div class="col-sm-12 col-md-4 col-xl-3  m-3">

<div class="card" style="width: 18rem;">
  <img src="/images/computer.jpeg" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">@Model.ProductName</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a asp-action="Get" asp-route-id="@Model.Id" class="btn btn-primary">Go somewhere</a>
  </div>
</div>
</div>
