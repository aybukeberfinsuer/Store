@model IEnumerable<Product>

<div class="text-center">
    <div class="display-6 my-3"> Products </div>
    <div class="d-flex justify-content-end" >
        <a class="btn btn-outline-success" asp-action="Create">           
            Create <i class="fa fa-plus"></i></a>
    </div>

    <table class="table table-striped table-over ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>

        <tbody>
            @foreach (Product prd in Model)
            {
                <tr>
                    <td>@prd.Id</td>
                    <td>@prd.ProductName</td>
                    <td>@prd.Price</td>
                    <td>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>