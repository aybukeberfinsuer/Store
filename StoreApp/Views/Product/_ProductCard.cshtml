@model Product


<div class="col-sm-12 col-md-4  m-3">

<div class="card" style="width: 18rem;">
  <img src="@Model?.ImageUrl" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">@Model.ProductName</h5>
    <p class="card-text">@Model.Summary</p>
    <a asp-action="Get" asp-route-id="@Model.Id" class="btn btn-primary">Go somewhere</a>
  </div>
</div>
</div>
