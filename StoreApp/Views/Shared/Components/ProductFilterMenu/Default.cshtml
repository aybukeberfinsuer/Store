<div class="my-3">
    <h6 class="lead">
        <i class="fa fa-filter text-secondary"></i>
        Filters
    </h6>
</div>
<div class="my-2">
    <form method="get" asp-action="Index" >

        <input type="hidden" name="categoryId" value="@(Context.Request.Query["categoryId"])">
        <div class="form-group my-2">
            <input class="from-control" name="SearchTerm" placeholder="Search" />
        </div>
        <div class="form-group my-2">
            <input class="from-control" name="MinPrice" placeholder="Minimum price" />
        </div>
        <div class="form-group my-2">
            <input class="from-control" name="MaxPrice" placeholder="Maximum price" />
        </div>

        <div class="from-group my-2">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </form>
</div>