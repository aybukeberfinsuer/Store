@model LoginModel

<div class="text-center my-3">
    <h6 class="display-6">
      <i class="fa-solid fa-right-to-bracket text-white bg-secondary p-3 rounded-5"></i> <br> Login</h6>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <div >
            <div class="text-danger" asp-validation-summary="All"></div>

        </div>

        <form method="post" asp-action="Login">
            <input type="hidden" asp-for="ReturnUrl">

            <div class="form-group my-3">
                <label asp-for="UserName">Name</label>
                <input asp-for="UserName" class="form-control">
            </div>
            <div class="form-group my-3">
                <label asp-for="Password">Password</label>
                <input type="password" asp-for="Password" class="form-control">
            </div>
            <div class="form-group my-3 d-flex justify-content-center">

                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-right-to-bracket"></i> Login</button>
            </div>
        </form>
    </div>
</div>
